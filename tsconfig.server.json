{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"include": ["server/**/*", "src/lib/musicLogic.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"src/main.tsx",
		"src/App.tsx",
		"src/components"
	]
}
